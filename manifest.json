{
  "manifest_version": 3,
  "name": "Last Used Tab Switcher",
  "version": "1.0",
  "description": "Switch between current tab and last used tab, similar to Firefox behavior",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "switch-to-last-tab": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Alt+Tab"
      },
      "description": "Switch to last used tab"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Last Used Tab Switcher"
  }
}
